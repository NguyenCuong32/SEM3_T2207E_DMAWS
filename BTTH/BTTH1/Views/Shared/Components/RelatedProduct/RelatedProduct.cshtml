@model IEnumerable<BTTH1.Models.ProductModels>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<!-- container -->
<div class="container">
	<!-- row -->
	<div class="row">

		<div class="col-md-12">
			<div class="section-title text-center">
				<h3 class="title">Lasted Products</h3>
			</div>
		</div>
@foreach (var item in Model.Reverse().Take(4))
	{

<div class="col-md-3 col-xs-6">
	<div class="product">
		<div class="product-img">
			<img src="../viewslib/@item.ProductImg" alt="">
			<div class="product-label">
				<span class="sale">-30%</span>
			</div>
		</div>
		<div class="product-body">
			
			<h3 class="product-name"><a href="~/ProductModels/ProductDetails?id=@item.ProductId">@item.ProductName</a></h3>
			<h4 class="product-price">$@item.ProductPrice <del class="product-old-price">$990.00</del></h4>
			<div class="product-rating">
			</div>
			<div class="product-btns">
				<button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">add to wishlist</span></button>
				<button class="add-to-compare"><i class="fa fa-exchange"></i><span class="tooltipp">add to compare</span></button>
				<button class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">quick view</span></button>
			</div>
		</div>
		<div class="add-to-cart">
			<button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> add to cart</button>
		</div>
	</div>
</div>



<div class="clearfix visible-sm visible-xs"></div>

}
	</div>
	<!-- /row -->
</div>
<!-- /container -->




